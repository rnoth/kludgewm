# bootstrap keybind

super + Escape
	exec pkill -USR1 -x sxhkd

# useful stuff

super + c
	cmus-remote -u
	
super + minus
	cmus-remote --vol -10%

super + equal
	cmus-remote --vol +10%

super + v
	touchpd-toggle.sh

super + e
	slock

### Window Manipulation

# killing windows
#super + q
#	kill $(xprop -id `pfw` | grep WM_PID | cut -c 25-)
	
super + q
	exec killw `pfw`

# spawning windows
#super + Return
#	urxvt +sb -fg white -bg black -tr
super + Return
	st

super + d
	exec dmenu_run

# resizing windows
super + alt + {h,l}
	wrs {-24,24} 0 `pfw`

super + alt + {k,j}
	wrs 0 {-56,56} `pfw`

super + alt + shift + {h,j,k,l}
	wrs {-96,0,0,96} {0,224,-224,0} `pfw`

# moving windows
super + m
	xmmv
	
# focusing windows
super + bracketright
	cff.sh

super + bracketleft
	cfb.sh
